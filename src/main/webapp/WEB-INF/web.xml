<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

   <servlet>
      <servlet-name>login</servlet-name>
      <servlet-class>com.yassine.assir.controller.LoginController</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>login</servlet-name>
      <url-pattern>/login</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>agenda</servlet-name>
      <servlet-class>com.yassine.assir.controller.AgendaController</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>agenda</servlet-name>
      <url-pattern>/activities</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>addActivity</servlet-name>
      <servlet-class>com.yassine.assir.controller.ActivityFormController</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>addActivity</servlet-name>
      <url-pattern>/addActivity</url-pattern>
   </servlet-mapping>
   <servlet>

      <servlet-name>activityController</servlet-name>
      <servlet-class>com.yassine.assir.controller.ActivityController</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>activityController</servlet-name>
      <url-pattern>/activity</url-pattern>
   </servlet-mapping>

   <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
   </welcome-file-list>

</web-app>